<?xml version="1.0" encoding="utf-8"?>
<resources>
    <style name="title">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:text">Welcome to dice rolling game</item>
        <item name="android:textColor">#800080</item>
        <item name="android:textSize">26sp</item>
    </style>

    <style name="editText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:ems">10</item>
        <item name="android:textSize">22sp</item>
    </style>

    <style name="playerRollButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">120dp</item>
    </style>

    <style name="resultTextView">
        <item name="android:text">Result</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">30dp</item>
        <item name="android:gravity">center</item>
        <item name="android:textSize">24sp</item>
    </style>

    <style name="winnerButton">
        <item name="android:text">Winner??</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginTop">60dp</item>
        <item name="android:layout_centerInParent">true</item>
    </style>

</resources>
